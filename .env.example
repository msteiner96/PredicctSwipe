# Smart Contract Deployment
PRIVATE_KEY=your_private_key_here
BSCSCAN_API_KEY=your_bscscan_api_key

# RPC Endpoints
# For local development (Hardhat node)
LOCAL_RPC_URL=http://127.0.0.1:8545
# For BNB Testnet
BSC_TESTNET_RPC=https://data-seed-prebsc-1-s1.binance.org:8545
# For BNB Mainnet
BSC_MAINNET_RPC=https://bsc-dataseed.binance.org/

# Backend API
PORT=3001
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here
MONGODB_URI=mongodb://localhost:27017/predictswipe
REDIS_URL=redis://localhost:6379

# AI Engine
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key

# Market Automation (Backend)
ENABLE_AUTOMATION=true
ENABLE_MARKET_GENERATION=true
ENABLE_MARKET_RESOLUTION=true
MARKETS_PER_RUN=3
MIN_CONFIDENCE_TO_RESOLVE=70

# Blockchain Configuration for Backend
# Use LOCAL_RPC_URL for local development, BSC_TESTNET_RPC for testnet
RPC_URL=http://127.0.0.1:8545

# Contract Addresses (Update these after deployment)
